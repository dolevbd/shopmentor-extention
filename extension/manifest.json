{
  "manifest_version": 3,
  "name": "ShopMentor AI",
  "version": "1.0.0",
  "description": "AI-powered shopping assistant that detects purchase intent and offers cheaper alternatives on Amazon and AliExpress",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "exclude_matches": [
        "*://*.google.com/*",
        "*://*.facebook.com/*",
        "*://*.youtube.com/*",
        "*://*.twitter.com/*",
        "*://*.instagram.com/*",
        "*://*.linkedin.com/*",
        "*://*.super-pharm.co.il/*",
        "*://*.shufersal.co.il/*",
        "*://*.ramilevy.co.il/*",
        "*://*.victory.co.il/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "ShopMentor AI"
  }
}
